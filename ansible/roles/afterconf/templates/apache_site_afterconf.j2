<VirtualHost *:{{ webport }}>
  ServerAdmin webmaster@localhost
  ServerName  {{ sitename }}.{{ master_host }}
  ServerName  {{ sitename }}.{{ ansible_default_ipv4.address }}.xip.io

  DocumentRoot /var/www/{{ sitename }}.{{ master_host }}
  ErrorLog ${APACHE_LOG_DIR}/error.log
  LogLevel warn

  <Directory /var/www/{{ sitename }}.{{master_host }}>
    Options FollowSymLinks MultiViews
    AllowOverride All
    Order allow,deny
    allow from all
  </Directory>

</VirtualHost>
